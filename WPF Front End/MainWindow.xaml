<Window
    x:Class="WPF_Front_End.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Front_End"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="720"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid MouseDown="Border_MouseDown">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Offset="1" Color="#FF2978A0" />
                <GradientStop Offset="0" Color="#FFbcab79" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border
            Height="720"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="0 0 0 0"
            MouseDown="Border_MouseDown" />

        <StackPanel Orientation="Horizontal">
            <StackPanel Width="400">
                <StackPanel Margin="20,55">
                    <StackPanel>
                        <TextBlock
                            Margin="20,20,20,20"
                            FontFamily="Freestyle Script Bold"
                            FontSize="45"
                            Foreground="#2c363f"
                            Text="Sign In"
                            TextAlignment="Center" />
                        <StackPanel
                            Margin="10,10,35,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Foreground="#d05871"
                                Kind="User" />
                            <TextBox
                                x:Name="txtUsername"
                                Width="180"
                                Margin="10,0"
                                materialDesign:HintAssist.Hint="Username"
                                BorderBrush="Black"
                                CaretBrush="Red"
                                Foreground="#563b66"
                                SelectionBrush="#d05871" />

                        </StackPanel>
                        <StackPanel
                            Margin="10,10,35,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Foreground="#f7d2de"
                                Kind="Lock" />
                            <PasswordBox
                                x:Name="txtPassword"
                                Width="180"
                                Margin="10,0"
                                materialDesign:HintAssist.Hint="Password"
                                BorderBrush="Black"
                                CaretBrush="red"
                                Foreground="#563b66"
                                SelectionBrush="#d05871" />
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <Button
                                x:Name="btwLogin"
                                Width="70"
                                Height="40"
                                Margin="20"
                                materialDesign:ButtonAssist.CornerRadius="0"
                                Background="#563b66"
                                BorderBrush="#563b66"
                                BorderThickness="1"
                                Click="btwLogin_Click"
                                Content="Log in"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="Login" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel>
                        <Separator Margin="20" Background="#d05871" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock
                            Margin="20,20,20,20"
                            FontFamily="Freestyle Script Bold"
                            FontSize="45"
                            Foreground="#2c363f"
                            Text="New Account"
                            TextAlignment="Center" />
                        <StackPanel
                            Margin="10,10,35,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Foreground="#d05871"
                                Kind="User" />
                            <TextBox
                                x:Name="txtNewUsername"
                                Width="180"
                                Margin="10,0"
                                materialDesign:HintAssist.Hint="Username"
                                BorderBrush="Black"
                                CaretBrush="DeepPink"
                                Foreground="#563b66"
                                SelectionBrush="#d05871" />
                        </StackPanel>
                        <StackPanel
                            Margin="10,10,35,10"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Foreground="#f7d2de"
                                Kind="Lock" />
                            <PasswordBox
                                x:Name="txtNewPassword"
                                Width="180"
                                Margin="10,0"
                                materialDesign:HintAssist.Hint="Password"
                                BorderBrush="Black"
                                CaretBrush="DeepPink"
                                Foreground="#563b66"
                                SelectionBrush="#d05871" />
                        </StackPanel>
                        <StackPanel Margin="10" HorizontalAlignment="Center">
                            <Button
                                x:Name="btwRegister"
                                Width="85"
                                Height="40"
                                Margin="20"
                                materialDesign:ButtonAssist.CornerRadius="0"
                                Background="#563b66"
                                BorderBrush="#563b66"
                                BorderThickness="1"
                                Click="BtwRegister_Click"
                                Content="Register"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="Login" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Width="880">
                <Image
                    Width="880"
                    Height="720"
                    HorizontalAlignment="Left"
                    Source="C:\Users\iFran\Desktop\General\Sparta-Work\WPF-Entity-Framework-CSharp-Project\BusinessLayer\Images\photo-1536440136628-849c177e76a1.jpg"
                    Stretch="Fill" />
            </StackPanel>
        </StackPanel>
        <StackPanel />
        <Button
            x:Name="btnClose"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#66CF62C7"
            BorderBrush="#66A03E99"
            Click="btnClose_Click"
            Foreground="#FFF7D2DE"
            Style="{StaticResource MaterialDesignFlatButton}"
            ToolTip="Close">
            <materialDesign:PackIcon
                Width="20"
                Height="20"
                Foreground="White"
                Kind="Close" />
        </Button>
    </Grid>
</Window>
