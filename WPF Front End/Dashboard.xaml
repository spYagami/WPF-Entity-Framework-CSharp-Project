<Window
    x:Class="WPF_Front_End.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_Front_End"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Dashboard"
    Width="1280"
    Height="720"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid MouseDown="Border_MouseDown">
        <Border
            Height="720"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="0 0 0 0"
            MouseDown="Border_MouseDown" />
        <Image
            x:Name="BackgroundImage"
            HorizontalAlignment="Center"
            OpacityMask="White"
            Source="C:\Users\iFran\Desktop\General\Sparta-Work\WPF-Entity-Framework-CSharp-Project\BusinessLayer\Images\2063914.jpg"
            Stretch="Fill" />




        <StackPanel Margin="10" VerticalAlignment="Center">

            <StackPanel Background="#7F000000">
                <TextBlock
                    Margin="20,20,20,20"
                    HorizontalAlignment="Center"
                    FontFamily="Freestyle Script Regular"
                    FontSize="50"
                    Foreground="White"
                    Text="Welcome"
                    TextAlignment="Center" />
            </StackPanel>

            <StackPanel
                Height="355"
                Margin="5,0,5,0"
                Background="#7F323232">

                <StackPanel>

                    <ListBox
                        x:Name="listOfMoviesBox"
                        Height="200"
                        Margin="20,20,20,20"
                        HorizontalContentAlignment="Center"
                        Background="#FF1B1B1B"
                        FontSize="25"
                        Foreground="White"
                        SelectionChanged="SelectionChangedMethod" />
                </StackPanel>

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--<Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>-->

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="100,0,100,0"
                            HorizontalContentAlignment="Center"
                            Background="#7FCDCDCD"
                            BorderBrush="#7FCDCDCD"
                            BorderThickness="3">
                            <StackPanel Orientation="Horizontal">
                                <TextBox
                                    x:Name="txtSearch"
                                    Grid.Column="0"
                                    Width="300"
                                    Height="40"
                                    Margin="20"
                                    Background="#3F1B1B1B"
                                    BorderBrush="#FF1B1B1B"
                                    CaretBrush="red"
                                    FontSize="20"
                                    Foreground="white"
                                    SelectionBrush="#d05871"
                                    TextAlignment="Center"
                                    ToolTip="Type in" />
                                <Button
                                    x:Name="btnSelect"
                                    Grid.Column="1"
                                    Width="95"
                                    Height="40"
                                    Margin="20"
                                    materialDesign:ButtonAssist.CornerRadius="0"
                                    Background="#FF323232"
                                    BorderBrush="#7FCDCDCD"
                                    BorderThickness="1"
                                    Click="Select"
                                    Content="Ok"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Select Typed text" />
                                <Button
                                    x:Name="btnUpdateMovieList"
                                    Grid.Column="1"
                                    Width="95"
                                    Height="40"
                                    Margin="20"
                                    materialDesign:ButtonAssist.CornerRadius="0"
                                    Background="#FF323232"
                                    BorderBrush="#7FCDCDCD"
                                    BorderThickness="1"
                                    Click="LoadMovies"
                                    Content="Movies"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Update Movie List" />

                                <Button
                                    x:Name="btnTrailer"
                                    Grid.Column="1"
                                    Width="95"
                                    Height="40"
                                    Margin="20"
                                    materialDesign:ButtonAssist.CornerRadius="0"
                                    Background="#FF323232"
                                    BorderBrush="#7FCDCDCD"
                                    BorderThickness="1"
                                    Click="TrailerMethod"
                                    Content="Trailer"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Watch Trailer" />
                                <Button
                                    x:Name="btnLoveList"
                                    Grid.Column="1"
                                    Width="95"
                                    Height="40"
                                    Margin="20"
                                    materialDesign:ButtonAssist.CornerRadius="0"
                                    Background="#FF935858"
                                    BorderBrush="#7FCDCDCD"
                                    BorderThickness="1"
                                    Click="LoadFavouriteTitles"
                                    Content="Preferred"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Display Favourites" />

                                <Button
                                    x:Name="btnAddFavourite"
                                    Grid.Column="1"
                                    Width="95"
                                    Height="40"
                                    Margin="20"
                                    materialDesign:ButtonAssist.CornerRadius="0"
                                    Background="#802024"
                                    BorderBrush="#7FCDCDCD"
                                    BorderThickness="1"
                                    Click="Add_Remove_Favourite"
                                    Content="+/-"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="Add/Remove Favourites" />

                            </StackPanel>

                        </Label>

                    </Grid>

                </StackPanel>

            </StackPanel>

        </StackPanel>
        <StackPanel />
        <Button
            x:Name="btnClose"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#7F598392"
            BorderBrush="#7FCDCDCD"
            Click="CloseWindow"
            Foreground="#7FCDCDCD"
            Style="{StaticResource MaterialDesignFlatButton}"
            ToolTip="Close">
            <materialDesign:PackIcon
                Width="20"
                Height="20"
                Foreground="White"
                Kind="Close" />
        </Button>
        <Button
            x:Name="btnLogOut"
            Margin="0,10,70,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#7F598392"
            BorderBrush="#7FCDCDCD"
            Click="LogOut"
            Foreground="#7FCDCDCD"
            Style="{StaticResource MaterialDesignFlatButton}"
            ToolTip="LogOut">
            <materialDesign:PackIcon
                Width="20"
                Height="20"
                Foreground="White"
                Kind="LogoutVariant" />
        </Button>
        <Image
            x:Name="DimImage"
            Margin="0"
            VerticalAlignment="Center"
            OpacityMask="#BF000000"
            Source="C:\Users\iFran\Desktop\General\Sparta-Work\WPF-Entity-Framework-CSharp-Project\BusinessLayer\Images\wp2832050.png"
            Stretch="Fill"
            Visibility="Hidden" />
        <Frame
            x:Name="Main"
            Width="1280"
            Height="720"
            Margin="0"
            Background="Black"
            NavigationUIVisibility="Hidden"
            Visibility="Hidden" />

        <!--<StackPanel>
            <TextBlock Text="Hello" />
        </StackPanel>
        <Frame
            x:Name="Main"
            Margin="100"
            Background="Black" />-->

    </Grid>
</Window>
